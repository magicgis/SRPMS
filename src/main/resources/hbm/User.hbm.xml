<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.User" table="user" schema="" catalog="workflow">
        <property name="email">
            <column name="email" sql-type="varchar" length="30"/>
        </property>
        <property name="pwd">
            <column name="pwd" sql-type="varchar" length="20"/>
        </property>
        <property name="privilege">
            <column name="privilege" sql-type="varchar" length="4"/>
        </property>
    </class>
</hibernate-mapping>