<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Book" table="book" schema="" catalog="workflow">
        <id name="bkId" column="bk_id"/>
        <property name="bkName" column="bk_name"/>
        <property name="pubDate" column="pub_date"/>
        <property name="publisher" column="publisher"/>
        <property name="isbn" column="ISBN"/>
        <property name="scYr" column="sc_yr"/>
        <property name="bkType" column="bk_type"/>
        <property name="bkWdNum" column="bk_wd_num"/>
        <many-to-one name="baseByDeptId" class="entity.Base">
            <column name="dept_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>