<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Book" table="book" schema="" catalog="workflow">
        <id name="bkId" column="bkId"/>
        <property name="bkName" column="bkName"/>
        <property name="pubDate" column="pubDate"/>
        <property name="publisher" column="publisher"/>
        <property name="isbn" column="ISBN"/>
        <property name="scYr" column="scYr"/>
        <property name="bkType" column="bkType"/>
        <property name="bkWdNum" column="bkWdNum"/>
        <many-to-one name="baseByDeptId" class="entity.Base">
            <column name="deptId"/>
        </many-to-one>
    </class>
</hibernate-mapping>